/**app.wxss**/
.container {
  width: 100%;
  height: auto;
} 
page{
  background: #EBEBEB;
  font-family:MicrosoftYaHei-Bold;
}

/*联系人信息*/
.message{
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top:1px;
  display: flex;
  align-items: center;
  align-content: center;
  vertical-align: center;
}
.ms{
  height: 38rpx;
  float: left;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:#333;
}

.content-item{
  display: flex;
  flex-direction: row
}
.message-item-title{
  line-height: 50rpx;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:#333;
}

.message-item-input{
  flex:1;
  line-height: 50rpx;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:#333;
}
/*预约定金*/
.cost{
  width: 90%;
  text-align: right;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(253,22,22,1);
  line-height:28rpx;
  margin:auto;
  margin-top: 30rpx;
}
/*温馨提示*/
.prompt{
  width:674rpx;
  height:123rpx;
  font-size:22rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:50rpx;
  margin:auto;
  margin-top: 22rpx;
}
/*拍照上传*/
.add{
  width:126rpx;
  height:126rpx;
}
.text{
  font-size:24rpx;
  font-family:HiraginoSansGB-W3;
  font-weight:normal;
  color:rgba(153,153,153,1);
  line-height:24rpx;
  margin: 10rpx 0 20rpx 0;
}
/*选择框*/
.reason{
  display: flex;

}
.res{
  width: 250rpx;
  height: 50rpx;
  box-sizing: border-box;
  border-radius:4px;
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  line-height:50rpx;
  text-align: center;
  border:1px solid #666;
  color: #333;
}


/*底部悬浮框*/
.footer{
  display: flex; 
  background: #ffffff;  
  align-items: center;
}
/*底部按钮*/
.footer {   
  width: 100%;   
  height: 98rpx;        
  position: fixed; 
  bottom: 0;
  border-top: 1px solid #eee; 
}
button{
  width: 100%;
  height:98rpx;
  background:rgba(79,143,251,1);
  box-shadow:0px 0px 20px 0px #4F8FFB;
  font-size:30rpx;
  font-weight:400;
  color:#FFFFFF;
  line-height: 98rpx;
}
.section{
   width: 240rpx;
}
.head {
  background: #FFF;
}
/*订单中心导航栏*/
.swiper-tab {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
}
.tab-item {
  width: auto;
  margin: auto;
  text-align: center;
  font-size:28rpx;
  font-family:SimHei;
  font-weight:400;
}
.swiper {
  height: 1100px;
}
.on {
  color: #4F8FFB;
  border-bottom: 5rpx solid #4F8FFB;
}
/*订单列表*/
.order{
  width:690rpx;
  height:330rpx;
  background:#FFF;
  border-radius:6px;
  box-shadow:1px 0px 4px #999;
  margin: auto;
  margin-top: 20rpx;
}
.item{
  width: 690rpx;
  height: auto;
  display: flex;
}
.img{
  width:140rpx;
  height:140rpx;
  margin:0 24rpx 20rpx 24rpx;
}

.title .up .middle .down{
  font-family:SimHei;
  font-weight:400;
}
.title{
  color:#616466;
  font-size:30rpx;
  margin-top: 24rpx;
  line-height: 70rpx;

}
.up{
  font-size:30rpx;
}
.middle{
  font-size:30rpx;
  color:#666;
}
.down{
  font-size: 24rpx;
}

/*定位*/
.location{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}