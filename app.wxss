/**app.wxss**/
.container {
  position: relative;
  width: 100%;
  height: auto;
} 
page{
  background: #EBEBEB;
  font-family:MicrosoftYaHei;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/*联系人信息*/
.message{
  width: 100%;
  line-height: 100rpx;
  background: #FFFFFF;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:#333;
  margin-top:1px;
  display: flex;
  align-items: center;
  padding-left: 0.8rem;
}
.ms{
  width: auto;
  height: 38rpx;
  float: right;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:#999;
  color: #333;
  padding-left: 0.6rem;
}
/*预约定金*/
.cost{
  width: 90%;
  text-align: right;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(253,22,22,1);
  line-height:28rpx;
  margin:auto;
  margin-top: 30rpx;
}
/*温馨提示*/
.prompt{
  width:674rpx;
  height:123rpx;
  font-size:22rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:50rpx;
  margin:auto;
  margin-top: 22rpx;
}
/*拍照上传*/
.add{
  width:126rpx;
  height:126rpx;
  margin-left: 36rpx;
}
.text{
  font-size:24rpx;
  font-family:HiraginoSansGB-W3;
  font-weight:normal;
  color:rgba(153,153,153,1);
  line-height:30rpx;
  margin: 10rpx 0 20rpx 0;
}
/*选择框*/
.reason{
  width: 150rpx;
  height: 50rpx;
  border-radius:4px;
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  line-height:50rpx;
  display: inline;
  text-align: center;
  border:1px solid #666;
  color: #000;
  background: #FFF;
  margin-left: 30rpx;
}


/*底部悬浮框*/
.footer{
  display: flex; 
  background: #ffffff;  
  align-items: center; 
}
/*底部按钮*/
.footer {   
  width: 100%;   
  height: 98rpx;        
  position: fixed; 
  bottom: 0;
  border-top: 1px solid #eee; 
}
button{
  width: 100%;
  height:98rpx;
  background:rgba(79,143,251,1);
  font-size:30rpx;
  font-weight:400;
  color:#FFFFFF;
  line-height: 98rpx;
  text-align: center;
}
.section{
   padding-left: 30rpx;
}
.head {
  background: #FFF;
}
/*订单中心导航栏*/
.swiper-tab {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
}
.tab-item {
  width: auto;
  margin: auto;
  text-align: center;
  font-size:28rpx;
  font-family:SimHei;
  font-weight:400;
}
.swiper {
  height: 1100px;
}
.on {
  color: #4F8FFB;
  border-bottom: 5rpx solid #4F8FFB;
}
/*订单菜单栏list的item*/  
.nav .nav_items{  
  width:auto;
  display: flex;
  align-items: center;
  margin:auto;
  line-height: 78rpx;
}  
/*订单列表*/
.order{
  width:690rpx;
  height:360rpx;
  background:#FFF;
  border-radius:6px;
  box-shadow:1px 0px 4px #999;
  margin: auto;
  margin-top: 20rpx;
}
.item image{  
  /*被图片设置宽高*/  
  width: 150rpx;
  height: 150rpx;
  margin: 0 30rpx 0 30rpx;
}
.item{
  width: 690rpx;
  height: auto;
  display: flex;
  margin-top: 20rpx;
}
.title .up .middle .down{
  font-family:SimHei;
  font-weight:400;
}
.title{
  color:#616466;
  font-size:30rpx;
  padding-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx; 
}
.up{
  font-size:30rpx;
  height: 50rpx;
}
.middle{
  font-size:30rpx;
  color:#666;
  height: 50rpx;
}
.down{
  font-size: 24rpx;
  height: 50rpx;
}
.red{
  color: rgba(253,22,22,1);
  float: right;
  margin-right: 30rpx;
}
.gray{
  color: #999;
  float: right;
  margin-right: 30rpx;
}
.address{
  font-size: 28rpx;
  display: flex;
  margin-top: 14rpx;
}
.address image{
  width:30rpx;
  height:30rpx;
  margin:18rpx 10rpx 0 30rpx;
}
.ordList-left{
  width: 140rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: #FFF;
  color: #000;
  border: 1px solid #666666;
}
.ordList-right{
  width: 140rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.button{
  display: flex;
  margin-top: 20rpx;
  float: right;
  width: 350rpx;
  margin-right: 20rpx;
  text-align: center;
}

/*定位*/
.location{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}