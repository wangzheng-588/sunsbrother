/* pages/brand/brand.wxss */
page{ height: 100%;} 
/*搜索框*/
.search{
  background: #E6E6E6;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.sc{
  width: 698rpx;
  height: 70rpx;
  background: #FFFFFF;
  border-radius:10px;
  margin:auto;
  padding-left: 24rpx;
  font-size: 28rpx;
}

/*品牌列表*/
.brand{
  width: 100%;
  height: 100%;
  background: #F5F5F5;
  margin-bottom: 90rpx
}
.brand_top{
  font-size: 32rpx;
  font-weight: 400;
  text-indent: 1rem;
  line-height: 80rpx;
}
.bd{
  width:700rpx;
  height:100rpx;
  background:#FFFFFF;
  border-radius:4px;
  font-size:30rpx;
  font-weight:bold;
  line-height:100rpx;
  margin: 0 20rpx 10rpx 16rpx;
  text-indent: 1.2rem;
}
.active{
  color: #FFFFFF;
  background: #4F8FFB;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/*底部提示*/
.down{
  width: 100%;
  height: 200rpx;
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}

/*底部按钮*/
.button{
  width: 50%;
  height: 98rpx;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400; 
  text-align: center;
  line-height: 98rpx;
}
.r{
  background: #4F8FFB;
  color: #FFFFFF;
}

/*右侧悬浮导航栏*/
.nav_region{
  width: 22rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #4F8FFB;
  font-family:ArialMT;
  font-weight:400;
  line-height: 32rpx;
  position: fixed;
  left: 720rpx;
  top: 100rpx;
  text-align: center;
}