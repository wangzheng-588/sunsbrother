<!--pages/login/login.wxml-->
<view class="container">
  <form bindsubmit='findPass'>
    <view class='item'></view>
    <input class='number font' type='number' placeholder='手机号' name="phone" bindinput ="phoneInput"></input>
    <view class='verification'>
      <input class='short font' type='number' placeholder='验证码' name="code" ></input>
      <button class='code' bindtap="sendCode">获取验证码</button>
    </view>
    <input class='number font' type='number' placeholder='新登陆密码' name="pass"></input>
    <input class='number font' type='number' placeholder='确认密码' name="checkPass"></input>
    <view class='herf'>
      <navigator url='../login/login' class='font register'>返回登录</navigator>
    </view>
    <button form-type='submit' style="margin-top: 40rpx" class='login'>确定</button>
  </form>
</view>
<wux-toast id="wux-toast" />
