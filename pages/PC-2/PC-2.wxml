<!--pages/PC-2/PC-2.wxml-->
<view class="head">
  <!--顶部导航栏-->
  <view class="swiper-tab">
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部订单</view>
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">有效接单</view>
    <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">失效订单</view>
    </view>
</view>
<view class='container'> 
  <!--内容主体-->
  <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">
    <swiper-item>
      <view class='order'>
        <view class='title'><text>预约编号：{{}}</text><text>{{}}</text></view>
        <view class='item'>
          <image class='img' wx:for="{{img}}"></image>
          <text class='up'>{{}}-{{}}-{{}}</text>
          <text class='middle'>{{}}</text>
          <text class='down'>上门费用：¥{{}}</text>
        </view>
        <view class=''>
        <text>{{}}{{}}</text>\n
        <text>{{}}</text>
        </view>
      </view>
    </swiper-item>
  </swiper>
</view>