.evaluate{
    box-sizing: border-box;
    padding: 10rpx;
    width:690rpx;
    background:#FFF;
    border-radius:6px;
    box-shadow:1px 0px 4px #999;
    margin: auto;
    margin-top: 20rpx;
}
.orderid{
    font-size:30rpx;
    font-weight:400;
    color:rgba(97,100,102,1);
}
.head{
    width:140rpx;
    height:140rpx;
}
.up{
    font-size:30rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.middle{
    margin-top: 18rpx;
    margin-bottom: 20rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.down{
    margin-bottom: 14rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.rater{
    font-size: 28rpx;
}
