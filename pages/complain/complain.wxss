/* pages/brand/brand.wxss */
page {
    height: 100%;
}
.container{
    box-sizing: border-box;
    padding: 40rpx;
    background: #ffffff;
    height: 100%;
}


.evaluate{
    box-sizing: border-box;
    padding: 10rpx;
    width:690rpx;
    background:#FFF;
    border-radius:6px;
    box-shadow:1px 0px 4px #999;
    margin: auto;
    margin-top: 20rpx;
}
.orderid{
    font-size:30rpx;
    font-weight:400;
    color:rgba(97,100,102,1);
}
.head{
    width:140rpx;
    height:140rpx;
}
.up{
    font-size:30rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.middle{
    margin-top: 18rpx;
    margin-bottom: 20rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.down{
    margin-bottom: 14rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}

.remarks{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    padding: 10rpx;
    display: flex;
    background: #FFF;
    font-weight:400;
    box-sizing: border-box;
    border: #999999 1rpx solid;
}

.cause{
    font-size: 26rpx;
    color: #333333;
    text-align: center;
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    border: #999999 1rpx solid;
    box-sizing: border-box;
}

.active-cause{
    font-size: 26rpx;
    color: #ffffff;
    background: #0c60ee;
    text-align: center;
    padding: 12rpx 22rpx;
    margin-right: 20rpx;
    box-sizing: border-box;
}
